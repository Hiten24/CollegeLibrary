<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/issued_book_user_sap_id_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Panlty :"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/issued_book_user_sap_id_value"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_user_sap_id_value" />

    <TextView
        android:id="@+id/issued_book_list_penalty_rs_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="20 Rs."
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/issued_book_user_sap_id_title3"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_user_sap_id_title3" />

    <TextView
        android:id="@+id/issued_book_user_sap_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sap ID : "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/issued_book_book_name_value"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_book_name_value" />

    <TextView
        android:id="@+id/issued_book_user_sap_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="53003180014"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/issued_book_user_sap_id_title"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_user_sap_id_title" />

    <TextView
        android:id="@+id/issued_book_book_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Book :"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/issued_book_user_dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/issued_book_book_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Ghost in the wire"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/issued_book_issue_date_value"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/issued_book_book_name_title"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_book_name_title" />

    <TextView
        android:id="@+id/issued_book_issue_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Issued On :"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/issued_book_issue_date_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/issued_book_issue_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="8 April, 2021"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/issued_book_exipry_date_title"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_issue_date_title" />

    <TextView
        android:id="@+id/issued_book_exipry_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Expired On :"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/issued_book_exipry_date_value"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_issue_date_value" />

    <TextView
        android:id="@+id/issued_book_exipry_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="15 April, 2021"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_exipry_date_title" />

    <ImageView
        android:id="@+id/issued_book_user_dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/man"
        app:layout_constraintBottom_toTopOf="@+id/issued_book_cover_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/issued_book_cover_img"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bookcoverm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/issued_book_user_dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/issued_book_user_dp"
        app:layout_constraintTop_toBottomOf="@+id/issued_book_user_dp"
         />

    <ImageView
        android:id="@+id/issued_book_confirm_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_book_returned_button_bg"
        app:layout_constraintBottom_toBottomOf="@+id/issued_book_list_penalty_rs_value"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/issued_book_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Returned"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/issued_book_confirm_bg"
        app:layout_constraintEnd_toEndOf="@+id/issued_book_confirm_bg"
        app:layout_constraintStart_toStartOf="@+id/issued_book_confirm_bg"
        app:layout_constraintTop_toTopOf="@+id/issued_book_confirm_bg" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>